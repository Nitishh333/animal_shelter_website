<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"/>
    
    <!-- <link rel="stylesheet" href="/csss/queries.css"> -->
    <style>
    @import url("https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700");
    * {
      margin: 0;
      padding: 0;
      outline: none;
      border: none;
      text-decoration: none;
      box-sizing: border-box;
      font-family: "Poppins", sans-serif;
    }
    html, body {
      height: 100%;
      background: #dfe9f5;
    }
    .container {
      display: flex;
      height: 100%;
    }
    nav {
      height: 100%;
      background: #9b975d;
      width: 280px;
      overflow: hidden;
      box-shadow: 0 20px 35px rgba(0, 0, 0, 0.1);
    }
    .logo {
      text-align: center;
      display: flex;
      margin: 10px 0 0 10px;
    }
    .logo img {
      width: 45px;
      height: 45px;
      border-radius: 50%;
    }
    .logo span {
      font-weight: bold;
      padding-left: 15px;
      font-size: 18px;
      text-transform: uppercase;
    }
    a {
      position: relative;
      color: rgb(255, 255, 255);
      font-size: 14px;
      display: table;
      width: 100%;
      padding: 10px;
    }
    nav .fas {
      position: relative;
      width: 70px;
      height: 40px;
      top: 14px;
      font-size: 20px;
      text-align: center;
    }
    .nav-item {
      position: relative;
      top: 12px;
      margin-left: 10px;
    }
    a:hover {
      background: #615d5d;
    }
    .logout {
      position: absolute;
      bottom: 0;
    }
    
       
    
    
    .dashboard {
      display: flex;
      min-height: 100vh;
    }
    
    .sidebar {
      width: 270px;
      background-color: #333;
      color: #fff;
      padding: 20px;
    }
    
    .sidebar h2 {
      margin-bottom: 20px;
      color: #f4d806;
      font-size: 30px;
      font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
    }
    
    .sidebar ul {
      list-style-type: none;
      padding: 0;
    }
    
    .sidebar ul li {
      margin-bottom: 10px;
      font-family: Verdana, Geneva, Tahoma, sans-serif;
    }
    
    .sidebar ul li a {
      text-decoration: none;
      color: #fff;
    }
    
    .sidebar ul li a.active {
      font-weight: bold;
    }
    
    .main-content {
      flex: 1;
      padding: 20px;
    }
    
    .main-content h1 {
      margin-bottom: 20px;
      font-family: Cambria, Cochin, Georgia, Times, 'Times New Roman', serif;
      color: rgb(58, 57, 54);
    }
    
    .complaints {
      display: flex;
      flex-wrap: wrap;
    }
    
    .complaint {
      width: calc(50% - 20px);
      background-color: #f4f4f4;
      padding: 20px;
      margin-bottom: 20px;
    }
    
    .complaint h3 {
      margin-bottom: 10px;
    }
    
    .dashboard a:hover {
      color: yellow;
      text-decoration: underline;
    }
    
    .main-content h1 {
      text-align: center;
      font-size: 50px;
      position: relative;
      bottom: 30px;
      text-decoration: underline #333;
    }
    .main-content img {
      width: 60px;
      position: relative;
      left: 45%;
    }
    
    .simple-content {
      display: flex;
      justify-content: center;
      font-size: 60px;
      color: brown;
    }
    
    .card {
      border: 1px solid #ccc;
      border-radius: 5px;
      padding: 20px;
      margin-bottom: 10px;
    }
    
    .card h3 {
      margin-bottom: 5px;
    }
    
    .card p {
      margin-top: 5px;
      margin-bottom: 5px;
      margin-left: 40px;
    }
    
    .card h3,
    .card p {
      padding-bottom: 10px;
    }
    .card a:hover {
      color: chocolate;
    }
    
    .main-content .card .phno {
      color: black;
      color: blue;
    }
    
    .hh:hover {
      text-decoration: underline;
      cursor: pointer;
    }
    .btn {
      width: 80px;
      font-size: 14px;
      margin-left: 40px;
      height: 5vh;
      border-radius: 10px;
      color: white;
      background-color: red;
    }
    .btn:hover {
      cursor: pointer;
    }
    
    .btn-blue {
      background-color: rgb(33, 101, 189);
    }
    .btn-red {
      background-color: rgb(225, 30, 30);
    }
</style>    
</head>
<body>
    
        <div class="container">
          <nav>
            <ul>
              <li><a href="#" class="logo">
                <img src="/pics/logo.jpg" alt="">
                <span class="nav-item">DashBoard</span>
              </a></li>
              <li><a href="/admin">
                <i class="fas fa-home"></i>
                <span class="nav-item">Home</span>
              </a></li>
              <li><a href="/queries">
                <i class="fas fa-user"></i>
                <span class="nav-item">Queries</span>
              </a></li>
              <li><a href="/admin/volunteer">
                <i class="fas fa-wallet"></i>
                <span class="nav-item">Volunteer</span>
              </a></li>
              <li><a href="/add/animals">
                <i class="fas  fa-chart-bar"></i>
                <span class="nav-item">Adoption</span>
              </a></li>

              <li><a href="adoption/requests">
                <i class="fas  fa-chart-bar"></i>
                <span class="nav-item">Adoption Requests</span>
              </a></li>
             
              <!-- <li><a href="" class="logout">
                <i class="fas fa-sign-out-alt"></i>
                <span class="nav-item">Log out</span>
              </a></li> -->
            </ul>
          </nav>


        <div class="main-content">
          <% queries.forEach(query => { %>
              <div class="card">
                  <h3>&#10140;Name: <%= query.name %></h3>
                  <p>Email: <%= query.email %></p>
                  <p class="phno">Phone Number : <span class="hh"> <%=  query.phoneno %></span></p>
                  <p>Category: <%= query.category %></p>
                  <p>Reason: <%= query.reason %></p>
                  <button class="delete-btn btn" data-id="<%= query._id %>">Delete</button>
        </div>
        <% }) %>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const deleteButtons = document.querySelectorAll('.delete-btn');
        deleteButtons.forEach(button => {
            button.addEventListener('click', async function() {
                const queryId = this.getAttribute('data-id');
                const confirmed = confirm('Are you sure you want to delete this query?');
                if (confirmed) {
                    try {
                        const response = await fetch(`/admin/delete/query/${queryId}`, {
                            method: 'DELETE'
                        });
                        if (response.ok) {
                            window.location.reload();
                        } else {
                            alert('Failed to delete query');
                        }
                    } catch (error) {
                        console.error('Error deleting query:', error);
                        alert('An error occurred while deleting the query');
                    }
                }
            });
        });
    });
</script>
</body>
</html>